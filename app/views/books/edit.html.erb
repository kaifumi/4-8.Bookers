<h1>Editing book</h1>

<% @book.errors.full_messages.each do |message|%>
    <%= message %>
<%end%>

<%= form_for(@book) do |f| %>
    <h4>Title</h4>
    <%= f.text_field :title %>
    <h4>Body</h4>
    <%= f.text_area :body %><br>
    <%= f.submit "Update Book" %>
<% end %>

