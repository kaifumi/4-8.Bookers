<h2 class="headline"><strong>Books</strong></h2>
  <table class="clearfix">
    <thead>
      <tr>
        <th>Title</th>
        <th>Body</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @books.each do |book|%>
        <tr>
          <td><%= book.title %></td>
          <td><%= book.body %></td>
          <td><%= link_to "Show", book_path(book) %></td>
          <td><%= link_to "Edit", edit_book_path(book)%></td>
          <td><%= link_to "Destroy", book_path(book), method: :delete%></td>
        </tr>  
      <%end%>      
    </tbody>
  </table>

<h2><strong>New book</strong></h2>
<% @book.errors.full_messages.each do |message| %>
  <li><%= message %></li>
<% end %>


<%= form_for(@book) do |f| %>    
  <h5>Title</h5>
  <%= f.text_field :title %>
  <h5>Body</h5>
  <%= f.text_area :body %><br>
  <%= f.submit 'Create Book' %>
<% end %>